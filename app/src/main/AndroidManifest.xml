<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dxnnx.com.soytec">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login" android:label="@string/title_activity_main">>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Registro"
            android:label="@string/app_name"/>

        <activity
            android:name="com.dxnnx.soytec.mainactivity.MainActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="com.dxnnx.soytec.mainactivity.full_post"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="com.dxnnx.soytec.mainactivity.crearEvento"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="com.dxnnx.soytec.mainactivity.mensajeria"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:label="@string/title_activity_main">
        </activity>

        <activity
            android:name="com.dxnnx.soytec.mainactivity.listaChats"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:label="@string/title_activity_main">
        </activity>


    </application>

</manifest>